<%= render 'shared/header' %>
<h2>Edit Films</h2>

<%= form_with(model: @film, url: film_path(@film), method: :patch) do |form| %>
    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div>
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>
    <div>
      <%= form.label :duration %>
      <%= form.number_field :duration %>
    </div>
    <div>
      <%= form.label :director %>
      <%= form.text_field :director %>
    </div>
    <div>
      <%= form.label :year_of_creation %>
      <%= form.number_field :year_of_creation %>
    </div>
    <div>
      <%= form.label :genres %>
      <%= form.text_field :genres %>
    </div>
    <div>
      <%= form.submit "Update Film" %>
    </div>
  <% end %>